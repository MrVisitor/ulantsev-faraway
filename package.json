{
  "name": "ulantsev-app",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Yuriy Ulantsev",
    "email": "yuriy.ulantsev@gmail.com"
  },
  "engines": {
    "node": ">= 19.9.0 <19",
    "npm": ">= 9.6.3 <10"
  },
  "scripts": {
    "start": "npx webpack serve --open-app-name='Google Chrome' --mode=development",
    "build": "npm run clear && node_modules/.bin/webpack --mode=production",
    "test": "jest",
    "clear": "rm -rf ./build",
    "lint": "node_modules/.bin/eslint src",
    "precommit-msg": "echo Runing pre-commit check ...",
    "audit": "level=$(npm audit --parseable | grep -E 'high|critical' | wc -l | rev); if [ $level != 0 ]; then echo 'Need fix audit errors ('$level') high or critical level before than do new commit!' && exit 125; else exit 0; fi"
  },
  "pre-commit": {
    "run": [
      "precommit-msg",
      "lint",
      "audit"
    ],
    "silent": true
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx)",
      "**/?(*.)+(spec|test).+(ts|tsx)"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.8",
    "@emotion/styled": "^11.10.8",
    "@hookform/resolvers": "^3.1.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.12.3",
    "@mui/system": "^5.12.3",
    "@reduxjs/toolkit": "^1.9.5",
    "@types/react-redux": "^7.1.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.2.3",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^7.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^4.0.1",
    "html-webpack-plugin": "^5.5.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^18.2.0",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "react-app",
      "react-app/jest",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "react/display-name": 0,
      "import/no-anonymous-default-export": 0,
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            "@mui/*/*/*"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
